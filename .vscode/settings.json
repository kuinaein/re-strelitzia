{
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  // Javascript
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    },
  ],
  "eslint.packageManager": "yarn",
  "vetur.format.defaultFormatter.js": "none",
  // YAML
  "yaml.format.singleQuote": true,
  "yaml.schemas": {
    "http://json.schemastore.org/prettierrc": [
      ".prettierrc.yml"
    ]
  },
  "files.associations": {
    ".env*": "shellscript",
    "*.neon": "yaml"
  }
}
